@model Fall2025_Final_Humbuckers.Models.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Edit User Roles";
}

<h1>Edit User Roles</h1>
<h4>@Model.Email</h4>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditUser" method="post">
            <input type="hidden" asp-for="UserId" />

            <div class="form-group mb-3">
                <label class="form-label"><strong>Current Roles:</strong></label>
                <div>
                    @if (Model.CurrentRoles.Any())
                    {
                        @foreach (var role in Model.CurrentRoles)
                        {
                            <span class="badge bg-primary me-1">@role</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No roles assigned</span>
                    }
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label"><strong>Assign Roles:</strong></label>
                @foreach (var role in Model.AllRoles)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="selectedRoles"
                               value="@role"
                               id="role_@role"
                               @(Model.CurrentRoles.Contains(role) ? "checked" : "") />
                        <label class="form-check-label" for="role_@role">
                            @role
                        </label>
                    </div>
                }
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Users" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">User Information</h5>
                <dl class="row">
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                </dl>
            </div>
        </div>
    </div>
</div>